<view class="content"><view class="data"><block wx:if="{{obj.headpic}}"><view class="box"><view class="head" style="display:flex;"><label style="margin-top:15px;" class="_span">用户头像:</label><image class="img" src="{{obj.headpic}}"></image><view class="name">{{"昵称:"+obj.nickName}}</view></view></view></block><block wx:if="{{obj.token}}"><view class="box"><view class="token">{{"Token:"+obj.token}}</view></view></block><block wx:if="{{obj.address}}"><view class="box"><view class="address">{{"收货地址:"+obj.address}}</view></view></block><block wx:if="{{obj.location.latitude}}"><view class="box"><view class="location"><view>所在位置:</view><view class="lat"><view class="lat_1">{{'纬度：'+obj.location.latitude+''}}</view><view class="lat_2">{{'经度：'+obj.location.longitude+''}}</view></view></view></view></block><block wx:if="{{obj.back_location}}"><view class="box"><view class="back_location">{{"后台获取位置状态:"+obj.back_location}}</view></view></block></view><audio src="{{audio.src}}" id="myAudio"></audio><view class="btn"><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['onAuth',['$event']]]]]}}" bindtap="__e">静默授权</button><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['onUserInfo',['$event']]]]]}}" bindtap="__e">头像</button><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['getAddress',['$event']]]]]}}" bindtap="__e">收货地址</button><button class="btn_1" type="primary" open-type="getPhoneNumber" data-event-opts="{{[['getphonenumber',[['getPhoneNumber',['$event']]]]]}}" bindgetphonenumber="__e">授权电话</button><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['get_location',['$event']]]]]}}" bindtap="__e">位置</button><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['ready_pay',['$event']]]]]}}" bindtap="__e">支付</button><view style="padding:20px 0;">微信后台执行的任务（关闭微信后仍继续）</view><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['background_location',['$event']]]]]}}" bindtap="__e">微信持续获取位置</button><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['start',['$event']]]]]}}" bindtap="__e">开始语音播报</button><block wx:if="{{loop}}"><button class="btn_1" type="primary" data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" bindtap="__e">暂停语音播报</button></block></view><xcx-auth vue-id="1" auth="{{auth}}" data-event-opts="{{[['^get_userinfo',[['userinfo']]]]}}" bind:get_userinfo="__e" bind:__l="__l"></xcx-auth></view>